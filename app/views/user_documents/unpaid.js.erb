function deleteButton() {
  const button = document.getElementById('<%= @user_document.id %>-unpaid-document');
  button.parentNode.removeChild(button)
}

function addButton(buttonHTML) {
  const element = document.querySelector('.due-cards');
  element.insertAdjacentHTML('beforeend', buttonHTML);
}


deleteButton();
addButton('<%= j render "profiles/due-card", user_document: @user_document %>');
