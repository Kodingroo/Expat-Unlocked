function deleteButton(innerHTML) {
  const button = document.getElementById('<%= @user_document.id %>-paid-document');
  button.innerHTML = innerHTML;
}

function addButton(buttonHTML) {
  const element = document.querySelector('.due-date-background-blue');
  element.insertAdjacentHTML('afterend', buttonHTML);
}


deleteButton('');
addButton('<%= link_to 'unpaid', unpaid_user_document_path(@user_document), method: :patch, remote: true, id: "#{@user_document.id}-unpaid-document" %>');
