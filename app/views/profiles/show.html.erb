<div class="primary-wrapper">
  <div class = "container">
    <div class = "row">
      <div class="col-sm-8 col-sm-offset-2">
        <div class="card-profile card-border">
          <div class="card-profile-display-none">
            <% if @user.photo.blank? %>
              <%= image_tag "avatar.png", class:"show-image" %>
            <% else %>
              <%= cl_image_tag @user.photo, class:"show-image" %>
            <% end %>
          </div>
         <div class="card-profile-infos">
          <div style="height: 100%;">
            <div class="edit-button">
              <div>
                <div>
                  <h2>
                    Username:
                  </h2>
                  <%= @user.username %>
                </div>
                <div>
                  <h2>
                    Address:
                  </h2>
                  <%= @user.address %>
                </div>
                <div>
                  <h2>
                    Email:
                  </h2>
                  <%= @user.email %>
                </div>
              </div>
              <div>
                <% if current_user == @user %>
                <%= button_to "edit profile", edit_user_registration_path, method: "get" %>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="container fifty-px-padding">
  <div class="row">
    <div class="col-sm-8 col-sm-offset-2">
      <div class="card-border">
        <div class="center-content due-date-background-blue">
          <strong>Your next three Due Dates:</strong>
        </div>
          <% current_user.user_documents.first(3).each do |user_document| %>
              <% unless user_document.state %></p>
                <p> <strong><%= user_document.title %> Bill: </strong> <%= user_document.due_date %></p>
                <%= simple_form_for(user_document) do |f| %>
                  <%= f.label "Paid" %>
                  <%= f.check_box :state, { onchange: 'this.form.submit()' } %>
                <% end %>
              <% end %>
          <% end %>
        </div>
        <div class="card-border">
          <div class="center-content due-date-background-blue">
            <strong>Recently paid bils:</strong>
          </div>
              <%if (current_user.user_documents.where(state: 1).count == 0)%>
                 <%= "You haven't paid any bills recently" %>
              <% end %>
            <% current_user.user_documents.first(3).each do |user_document| %>
              <% if user_document.state %></p>
                <p> <strong><%= user_document.title %> Bill: </strong> <%= user_document.due_date %></p>
                <%= simple_form_for(user_document) do |f| %>
                  <%= f.label "Paid" %>
                  <%= f.check_box :state, { onchange: 'this.form.submit()' } %>
                <% end %>
              <% end %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="center-content" style="margin-bottom: 60px;">
      <div>
        <%= button_to "user documents", user_documents_path, method: "get" %>
      </div>
    </div>
  </div>
</div>

