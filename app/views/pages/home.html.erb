<% content_for(:navbar_class, "navbar-home")%>
<div class="wrapper">
  <div class="banner">
    <div class="banner__header">
      <div class="col-xs-12 col-md-6">
        <h1 class="banner__heading">
          <%= image_tag 'logo.png', class: "logo" %>bill JP
        </h1>
        <div class="card">
          <div class="result">
            <ul style="list-style: none;">
              <li><p style="font-weight: bold;">Water bill</p></li>
              <li>
                <p>16,026 yen </p>
              </li>
              <li>
                <p>Due: May 18th</p>
              </li>
            </ul>
          </div>
          <div class="result-photo">
          </div>
        </div>
      </div>
      <div class="col-xs-12 col-md-6">
        <h2 class="banner__slogan">Take the guesswork out of Japanese bills</h2>
        <p class="banner__description">
          Understand and keep track of your monthly bill spending with our easy
          bill recognition
        </p>
      <button type="button" class="button">Try now</button>
      </div>
    </div>
  </div>
</div>

<div class="container site-introduction">
  <div class="site-introduction">
    <h1>
      Japanese bills can be hard to deal with. Let us help with:
    </h1>
  </div>
  <div class="row">
    <div class="col-md-6 col-xs-10">
      <h2 class="center-content">Recognition</h2>
      <div class="card">
        <% if current_or_guest_user.username == "guest" %> <%= link_to
        scan_info_path do %>
        <div class="card-body scan">
          <div class="card-icon">
            <i class="material-icons">
              linked_camera
            </i>
          </div>
        </div>
        <% end %> <% else %> <%= link_to profile_path do %>
        <div class="card-body scan">
          <div class="card-icon">
            <i class="material-icons">
              linked_camera
            </i>
          </div>
        </div>
        <% end %> <% end %>
        <div class="card-footer">
          <p>
            Get all the information your need. Upload a photo of your Japanese
            bill and we'll translate it for you. We'll give you the most
            relevant information such as how much and when it's due.
          </p>
        </div>
      </div>
    </div>
    <div class="col-md-6 col-xs-10">
      <h2 class="center-content">Tracking</h2>
      <div class="card">
        <%= link_to user_documents_path do %>
        <div class="card-body track">
          <div class="card-icon">
          </div>
        </div>
        <% end %>
        <div class="card-footer">
          <p>
            Keep up to date with when your next bill is due with our tracking
            and notification system. Remembering to go to the convenience stores
            every month is a pain. Let us remember for you.
          </p>
        </div>
      </div>
    </div>
  </div>
</div>
